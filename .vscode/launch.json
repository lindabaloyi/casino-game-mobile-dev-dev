{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug in Expo",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "exponent"
        },
        {
            "name": "Debug Android (Expo)",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "android",
            "expoHostType": "local"
        },
        {
            "name": "Debug iOS (Expo)",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "expoHostType": "local"
        },
        {
            "name": "Attach to Expo packager",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "attach",
            "platform": "exponent"
        },
        {
            "name": "Run Expo Server",
            "cwd": "${workspaceFolder}",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/expo",
            "args": ["start"],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Metro waiting on .+",
                "uriFormat": "http://localhost:8081",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Debug Server",
            "cwd": "${workspaceFolder}",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/multiplayer/server/index.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "compounds": [
        {
            "name": "Debug App & Server",
            "configurations": ["Debug in Expo", "Debug Server"]
        }
    ]
}
